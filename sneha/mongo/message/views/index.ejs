<html>
<head>
<link href="style.css">
</head>
<body>
	<h1>The Dojo Message Board</h1>
	<form action="/post" method="post">
		Name: <p><input type="text" name="name"></p>
		Message: <p><textarea name="message"></textarea></p>
		<input type="submit" value="Submit">
	</form>
	
	<% for (var x in posts) { %>
		<h3>Name: <%= posts[x].name %></h3>
		<h3>Message: <%= posts[x].message %></h3>
		<% if (posts[x].comments.length > 0) { %>
			<% for (var i in posts[x].comments) { %>
				<% if (posts[x].comments[i].comment) { %>
					<h5>Name: <%= posts[x].comments[i].name %></h5>
					<h5>Comment: <%= posts[x].comments[i].comment %></h5>
				<% } %>
			<% } %>
		<% } %>
		<form action="/comment/<%=posts[x]._id%>" method="post">
			Name: <input type="text" name="name">
			Comment: <input type="text" name="comment">
			<input type="submit" value="Submit">
		</form>
	<% } %>
 </body>
</html>